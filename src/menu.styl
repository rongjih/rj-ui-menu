.rj-ui-menu
  list-style none
  margin 0
  padding 0
  color #888
  cursor default
  position relative
  >.item
    padding .25em
    display inline-block
    position relative
    >.rj-ui-menu
      display none
      background-color #666
      >.item
        display block
    &:hover
      color #fff
      >.rj-ui-menu
        display block
        position absolute